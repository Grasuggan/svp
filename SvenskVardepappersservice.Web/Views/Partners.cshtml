@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Partners>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
    var partners = Model.Children<Partner>().Where(x => x.IsVisible());
}


<div class="main-section__heading">
    <h1>@Model.Name</h1>
</div>


<div class="partners">
    @foreach (var partner in partners)
    {
        <div class="partner">
            @if (@partner.Logo != null)
            {
            <div class="partner__image">
                <img src="@partner.Logo.MediaItem.Url()" alt=""/>
            </div>
            }
            <div class="partner__text">
                <p>@partner.Description</p>
                <div class="button-container">
                    <a href="@partner.Url()" class="button">@Umbraco.GetDictionaryValue("Read more")</a>
                </div>
            </div>
        </div>
    }
</div>
